# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Database
DATABASE_URL="your-production-database-url"
UPLOADTHING_TOKEN="your-production-uploadthing-token"

# JWT Configuration - MUST be changed for production
JWT_SECRET="your-super-secure-jwt-secret-at-least-32-characters-long-and-random"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=4000
NODE_ENV="production"

# Solana Configuration - MAINNET
SOLANA_NETWORK="mainnet-beta"
# Consider using a dedicated RPC provider for production:
# SOLANA_RPC_URL="https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY"
# SOLANA_RPC_URL="https://your-endpoint.solana-mainnet.quiknode.pro/YOUR_TOKEN/"
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
STORE_WALLET_ADDRESS="3VbgGn6S2N8YZKYAtZGxej1pJ6S2JDs3uhY1NUy36nGf"
PAYMENT_TIMEOUT="300"

# File Upload Configuration
UPLOAD_MAX_SIZE="10mb"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Additional Production Settings
CORS_ORIGIN="https://your-frontend-domain.com"
TRUST_PROXY=true